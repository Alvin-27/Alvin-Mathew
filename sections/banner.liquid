
<div class="custom-banner">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.text }}</p>

  {% if section.settings.button_link != blank and section.settings.button_text != blank %}
    <a href="{{ section.settings.button_link }}" class="btn-animated">
      {{ section.settings.button_text }}
    </a>
  {% endif %}

{% schema %}
{
  "name": "banner",
  "settings": [],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Tisson vison"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Find the ideal gift for your loved ones."
        },
        {
        "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
        },
         {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}