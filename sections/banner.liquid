
<div class="banner">
  {% for block in section.blocks %}
    <div class="block-item">
      <h2>{{ block.settings.heading }}</h2>
      <p>{{ block.settings.text }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "banner",
  "settings": [],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Sample Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "This is a sample description text."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}