<div class="Banner_section">
  {% for block in section.blocks %}
    <h2>{{ block.settings.heading }}</h2>
    <p> {{ block.settings.sub_heading }}</p>
    
  {% endfor %}
  </div>

  <div class="gift_section">
    {% for block in section.blocks %}
      {% case block.settings.label %}
        {% when 'Gift Heading' %}
          <h1>{{ block.settings.gift_heading }}</h1>
        {% when 'Gift Description' %}
          <p>{{ block.settings.gift_description }}</p>
          
      {% endcase %}
      
    {% endfor %}
    </div>


{% schema %} 
 {
  "name" : "Banner",
  "settings" : [],
  "blocks" :[
    {
      "name" : "Header",
      "type" : "text",
     "settings": [
       {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default" : "Tisso Vison"
      },
      {
        "type": "textarea",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default" : "Find the ideal gift for your loved ones."
      }
     ]
    },
    {
      "name" : "Gift_Guide",
      "type": "paragraph",
      "settings": [
        {
          "type": "textarea",
        "id": "gift_heading",
        "label": "Gift Heading",
        "default" : "The Gift Guide"
        },
        {
          "type": "textarea",
        "id": "gift_description",
        "label": "Gift Description",
        "default" : "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
        }
      ]
    }
  ]
  


}

{% endschema %}