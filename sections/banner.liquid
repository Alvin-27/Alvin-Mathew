<div class="Banner_section">
  <h2>{{ section.settings.heading }}</h2>
  {% for block in section.blocks %}
    <p> {{ block.settings.sub_heading }}</p>
    
  {% endfor %}
  </div>


{% schema %} 
 {
  "name" : "Banner",
  "settings" : [
    {
      "type" : "text",
      "id": "heading",
      "label" :"Banner Heading" ,
      "default" : "Tisso Vision"
    }
  ],
  "blocks" :[
    {
      "name" : "Header",
      "type" : "text",
     "settings": [
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default" : "Find the ideal gift for your loved ones."
      }
     ]
    }
  ]

}

{% endschema %}