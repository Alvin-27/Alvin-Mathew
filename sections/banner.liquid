<div class="Banner_section">
  {% for block in section.blocks %}
    <h2>{{ block.settings.heading }}</h2>
    <p> {{ block.settings.sub_heading }}</p>
    
  {% endfor %}
  </div>


{% schema %} 
 {
  "name" : "Banner",
  "settings" : [
  
  ],
  "blocks" :[
    {
      "name" : "Header",
      "type" : "text",
     "settings": [
       {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default" : "Tisso Vison"
      },
      {
        "type": "textarea",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default" : "Find the ideal gift for your loved ones."
      }
     ]
    }
  ]

}

{% endschema %}